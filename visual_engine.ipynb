        "# @title ðŸš€ INICIAR GERADOR DEFINITIVO (CORRIGIDO & ESTÃVEL)\n",
        "import os, subprocess, time, re, socket, threading, hashlib, base64\n",
        "\n",
        "# --- 1. LIMPEZA E INSTALAÃ‡ÃƒO CONTROLADA ---\n",
        "print(\"ðŸ§¹ Limpando processos antigos...\")\n",
        "!pkill -9 cloudflared\n",
        "!pkill -9 python\n",
        "\n",
        "print(\"ðŸ“¦ Instalando dependÃªncias estÃ¡veis (Aguarde...)\")\n",
        "# ForÃ§amos versÃµes que nÃ£o causam erro de MT5Tokenizer\n",
        "!pip install -q \"diffusers==0.27.2\" \"transformers==4.38.2\" \"accelerate==0.28.0\" flask flask-cors\n",
        "\n",
        "from flask import Flask, request, jsonify\n",
        "from flask_cors import CORS\n",
        "import torch\n",
        "from diffusers import StableDiffusionXLPipeline\n",
        "\n",
        "# --- 2. CARREGAMENTO DA IA (ESTILO PYTORCH) ---\n",
        "print(\"ðŸš€ Carregando IA na GPU (SDXL Turbo)...\")\n",
        "try:\n",
        "    # Usamos o Pipeline direto para evitar o erro de AutoPipeline\n",
        "    pipe = StableDiffusionXLPipeline.from_pretrained(\n",
        "        \"stabilityai/sdxl-turbo\", \n",
        "        torch_dtype=torch.float16, \n",
        "        variant=\"fp16\"\n",
        "    ).to(\"cuda\")\n",
        "    print(\"âœ… IA Carregada com sucesso!\")\n",
        "except Exception as e:\n",
        "    print(f\"âŒ ERRO CRÃTICO: {e}\")\n",
        "    raise\n",
        "\n",
        "app = Flask(__name__)\n",
        "CORS(app)\n",
        "memory = {}\n",
        "\n",
        "@app.route('/')\n",
        "def health(): return \"âœ… Servidor Online\"\n",
        "\n",
        "@app.route('/generate', methods=['POST'])\n",
        "def generate():\n",
        "    try:\n",
        "        data = request.json\n",
        "        prompt = data.get(\"prompt\", \"\").lower()\n",
        "        words = prompt.split()\n",
        "        entity = words[0] if words else \"default\"\n",
        "        \n",
        "        # PersistÃªncia de Personagem via Seed\n",
        "        if entity not in memory:\n",
        "            memory[entity] = int(hashlib.md5(entity.encode()).hexdigest(), 16) % 10**8\n",
        "        \n",
        "        # GeraÃ§Ã£o de 1 passo (Ultra RÃ¡pido)\n",
        "        image = pipe(\n",
        "            prompt=prompt, \n",
        "            num_inference_steps=1, \n",
        "            guidance_scale=0.0, \n",
        "            generator=torch.Generator(\"cuda\").manual_seed(memory[entity])\n",
        "        ).images[0]\n",
        "        \n",
        "        image.save(\"o.png\")\n",
        "        with open(\"o.png\", \"rb\") as f:\n",
        "            return jsonify({\"image\": base64.b64encode(f.read()).decode('utf-8')})\n",
        "    except Exception as e:\n",
        "        return jsonify({\"error\": str(e)}), 500\n",
        "\n",
        "# --- 3. EXECUÃ‡ÃƒO DO SERVIDOR E TÃšNEL ---\n",
        "def run_flask():\n",
        "    app.run(host='0.0.0.0', port=5000, use_reloader=False)\n",
        "\n",
        "threading.Thread(target=run_flask).start()\n",
        "time.sleep(5)\n",
        "\n",
        "print(\"ðŸŒ Ativando TÃºnel Cloudflare...\")\n",
        "!wget -q https://github.com/cloudflare/cloudflared/releases/latest/download/cloudflared-linux-amd64.deb\n",
        "!dpkg -i cloudflared-linux-amd64.deb > /dev/null 2>&1\n",
        "\n",
        "p = subprocess.Popen(['cloudflared', 'tunnel', '--url', 'http://127.0.0.1:5000'], \n",
        "                     stdout=subprocess.PIPE, stderr=subprocess.STDOUT, text=True)\n",
        "\n",
        "for line in p.stdout:\n",
        "    if \".trycloudflare.com\" in line:\n",
        "        url = re.search(r\"https://[a-zA-Z0-9-]+\\.trycloudflare\\.com\", line)\n",
        "        if url:\n",
        "            print(\"\\n\" + \"=\"*60)\n",
        "            print(f\"ðŸš€ SISTEMA PRONTO: {url.group(0)}\")\n",
        "            print(\"=\"*60)\n",
        "            break\n",
        "\n",
        "# Keep-alive para evitar desligamento do Colab\n",
        "try:\n",
        "    while True:\n",
        "        time.sleep(30)\n",
        "except KeyboardInterrupt:\n",
        "    print(\"Finalizado pelo usuÃ¡rio.\")"
      ],
